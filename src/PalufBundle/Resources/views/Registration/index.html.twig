{% extends "::base.html.twig" %}

{% block title %}PalufBundle:Registration:index{% endblock %}

{% block body %}
    <h1>Registrace týmu</h1>

    {{ form_start(form, {'attr': {'id': 'signupForm', 'class': 'col-xs-5'}}) }}
    <fieldset>
        <legend>Přihlašovací údaje</legend>
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.passwordCheck) }}
    </fieldset>
    <fieldset>
        <legend>Týmové údaje</legend>
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
    </fieldset>
        {{ form_row(form.send) }}
    {{ form_end(form) }}

    <script>

        $().ready(function() {


            // validate signup form on keyup and submit
            $("#signupForm").validate({
                rules: {
                    registration_name: "required",
                    registration_password: {
                        required: true,
                        minlength: 4
                    },
                    registration_passwordCheck: {
                        required: true,
                        minlength: 4,
                        equalTo: "#registration_password"
                    },
                    registration_email: {
                        required: true,
                        email: true
                    }
                },
                messages: {
