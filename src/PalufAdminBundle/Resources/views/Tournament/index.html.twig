{% extends "PalufAdminBundle::base.html.twig" %}

{% block title %}PalufAdminBundle:Tournament:index{% endblock %}

{% block body %}
    <h1>Seznam turnajů</h1>

    <a href="{{ path("admin_tournament_new") }}">Založit nový</a>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Název turnaje</th>
            <th>Od</th>
            <th>Do</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                <td><a href="{{ path('admin_tournament_view', { 'id': tournament.id }) }}">{{ tournament.id }}</a></td>
                <td>{{ tournament.name }}</td>
                <td>{{ tournament.start|date("d. m. Y")  }}</td>
                <td>{{ tournament.end|date("d. m. Y")  }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_game_list', { 'tournament': tournament.id }) }}">games</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_tournament_view', { 'id': tournament.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_tournament_edit', { 'id': tournament.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
