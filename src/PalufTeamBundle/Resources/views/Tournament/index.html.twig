{% extends "::base.html.twig" %}

{% block title %}PalufTeamBundle:Tournament:index{% endblock %}

{% block body %}
    <h1>Přihlášené zápasy</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Team A</th>
            <th>Team B</th>
            <th>Stav</th>
            <th>Akce</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.teamA.name }}</td>
                <td>{{ game.teamB.name }}</td>
                <td>{% if game.done %}Ukončeno{% else %}Probíhá{% endif %}</td>
                <td>
                    {% if not game.done %}
                        <a href="{{ path('team_game', { 'id': game.id }) }}">Plánování</a>
                    {% else %}
                        Dokončeno {{ game.aResultA }}:{{ game.aResultB }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
