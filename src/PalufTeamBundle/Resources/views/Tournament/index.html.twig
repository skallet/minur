{% extends "::base.html.twig" %}

{% block title %}PalufTeamBundle:Tournament:index{% endblock %}

{% block body %}
    <h1>Přihlášené zápasy</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Team A</th>
            <th>Team B</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.teamA.name }}</td>
                <td>{{ game.teamB.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
